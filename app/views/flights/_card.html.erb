<div class="card mb-3">
  <h2 class="card-header h4">
    Flight #<%= flight.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd><%= flight.user_id %></dd>
      <!-- Display user_id end -->

      <dt>Departs at</dt>
      <!-- Display departs_at start -->
      <dd><%= flight.departs_at %></dd>
      <!-- Display departs_at end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= flight.description %></dd>
      <!-- Display description end -->

      <dt>Alert sent</dt>
      <!-- Display alert_sent start -->
      <dd><%= flight.alert_sent %></dd>
      <!-- Display alert_sent end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back flight, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link flight start -->
      <div class="col">
        <% if current_user == @flight.user %>
          <%= link_to edit_flight_url(flight), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link flight end -->

      <!-- Delete link flight start -->
      <div class="col">
        <% if current_user == @flight.user %>
          <%= link_to flight, method: :delete, data: { confirm: "Do you really want to delete this flight?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link flight end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(flight.updated_at) %> ago
  </div>
</div>
